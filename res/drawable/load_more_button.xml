<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="#eeeeee"
                    android:endColor="#dddddd"
                    android:angle="270"/>
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <gradient
                    android:startColor="#eeeeee"
                    android:endColor="#dddddd"
                    android:angle="270"/>
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#ffffff"
                    android:endColor="#eeeeee"
                    android:angle="270"/>
            <corners
                    android:radius="4dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
</selector>